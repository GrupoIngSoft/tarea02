#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void so()
{

}

void geo()
{

}

void informacion()
{
    printf("Fecha: %d-%d-%d\n", day, month, year);
	printf("Integrantes: Cesar Riutor, Diego Esparza, Rafael Vivar\n");
}

int main(int argc, char* argv[])
{
    time_t t = time(NULL);
	struct tm tm = *localtime(&t);
	int day = tm.tm_mday;
	int month = tm.tm_mon + 1;
	int year = tm.tm_year + 1900;
	int hour = tm.tm_hour;
	int min = tm.tm_min;
	int sec = tm.tm_sec;

    if(strcmp(argv[1],"-so")==0)
    {
        void so();
    }
    if(strcmp(argv[1],"-geo")==0)
    {
        void geo();
    }
    if(strcmp(argv[1],"-v")==0)
    {
        void informacion();
    }
    if(strcmp(strcmp(argv[1],"-so")!=0 && strcmp(argv[1],"-geo")!=0 && argv[1],"-v")!=0)
    {
        printf("\t\tOPCIÃ“N INCORRECTA!!\t\t");
    }
}
